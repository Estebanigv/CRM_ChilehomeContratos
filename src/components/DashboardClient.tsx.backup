// Helper function to safely parse JSON responses
async function safeParseJSON(response: Response) {
  const responseText = await response.text()
  
  // Check if server returned HTML instead of JSON
  if (responseText.trim().startsWith('<!DOCTYPE') || responseText.trim().startsWith('<html')) {
    console.error('üö® Frontend: Server returned HTML instead of JSON:', responseText.substring(0, 200) + '...')
    throw new Error('Server returned HTML instead of JSON - possible authentication error')
  }
  
  try {
    return JSON.parse(responseText)
  } catch (parseError) {
    console.error('üö® Frontend: JSON Parse Error:', parseError)
    console.error('üö® Frontend: Response text:', responseText.substring(0, 500) + '...')
    throw new Error(`Invalid JSON response: ${parseError}`)
  }
}

